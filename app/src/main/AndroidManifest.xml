<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.gabeheath.apitemplate"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.gabeheath.apitemplate.activities.StartLogic"
            android:label="@string/app_name"
            android:theme="@style/SplashScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name="com.gabeheath.apitemplate.activities.LoginActivity"
            android:label="@string/login_toolbar_label">
        </activity>

        <activity
            android:name="com.gabeheath.apitemplate.activities.RegisterActivity"
            android:label="@string/register_toolbar_label">
        </activity>

        <activity
            android:name="com.gabeheath.apitemplate.activities.MainActivity"
            android:label="@string/main_toolbar_label">
        </activity>

        <activity
            android:name="com.gabeheath.apitemplate.activities.EmailUpdateActivity"
            android:label="@string/email_update_label">
        </activity>

        <activity
            android:name="com.gabeheath.apitemplate.activities.ForgotPasswordActivity"
            android:label="@string/forgot_password_label">
        </activity>

        <activity
            android:name="com.gabeheath.apitemplate.activities.PasswordUpdateActivity"
            android:label="@string/password_update_label">
        </activity>

    </application>

</manifest>
